<!DOCTYPE module SYSTEM "module.dtd">

<module name="big_object_detector" dir="big_drone">
    <doc>
        <description>
            Module for all the computer vision.
        </description>
        <define name="COLOR_OBJECT_DETECTOR_CAMERA1" value="front_camera|bottom_camera" description="Video device to use"/>
        <define name="COLOR_OBJECT_DETECTOR_DRAW1" value="FALSE|TRUE" description="Whether or not to draw on image"/>
        <define name="COLOR_OBJECT_DETECTOR_CAMERA2" value="front_camera|bottom_camera" description="Video device to use"/>
        <define name="COLOR_OBJECT_DETECTOR_DRAW2" value="FALSE|TRUE" description="Whether or not to draw on image"/>
    </doc>


    <dep>
        <depends>video_thread</depends>
    </dep>

    <header>
        <file name="big_object_detector.h"/>
    </header>

    <init fun="big_detector_init()"/>
    <periodic fun="big_detector()" freq="50"/>

    <makefile target="ap|nps">
        <!-- Make sure to add any necessary files here in order to make the compiler detect them -->
        <file name="big_object_detector.c"/>
        <file name="interface.cpp"/>
        <file name="convolute.cpp"/>
        <file name="linear.cpp"/>
        <file name="MaxPool.cpp"/>
        <file name="net.cpp"/>
        <file name="padding.cpp"/>
        <file name="relu.cpp"/>
        <file name="tensor.cpp"/>
    </makefile>

</module>

